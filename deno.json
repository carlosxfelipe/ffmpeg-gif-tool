{
  "tasks": {
    "start": "deno run --allow-run=ffmpeg --allow-read --allow-write main.ts",
    "fmt": "deno fmt",
    "lint": "deno lint"
  },
  "imports": {
    "jsr:@std/path": "jsr:@std/path"
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true,
      "semiColons": true
    }
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "exclude": [
    ".git",
    ".gitignore",
    "palette.png"
  ]
}
